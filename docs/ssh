source /usr/local/packages/python/setup/pytorch-0.4.1.cshrc
source /usr/local/packages/python/setup/mxnet-1.2.0.cshrc
source /usr/local/packages/python/setup/opencv-4.0.0.cshrc
source /usr/local/packages/python/setup/matplotlib-3.1.1.cshrc
# change the directory correspondingly
alias pip /home/data/wxieai/env/bin/pip


